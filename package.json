{
  "name": "immersion-days-team-8-api",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --fix .",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest -c jest-e2e.config.ts",
    "openapi:generate": "ts-node -r tsconfig-paths/register scripts/generate-openapi.ts",
    "dedupe": "yarn dedupe --strategy highest",
    "dedupe:check": "yarn dedupe --check",
    "prepare": "husky",
    "commitlint": "commitlint",
    "commit": "cz",
    "build": "nest build",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "dev": "nest start --watch"
  },
  "lint-staged": {
    "*.{ts,js,json,md,yml,yaml}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^8.57.1",
    "@nestjs/cli": "^10.4.8",
    "@nestjs/testing": "^10.4.8",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.7.5",
    "@types/supertest": "^6.0.3",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.2.8",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.0"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.8",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.4.8",
    "@nestjs/platform-express": "^10.4.8",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.28"
  }
}
